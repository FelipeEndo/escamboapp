<h1 class="page-header">Administradores</h1>

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
     <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
     <ul>
       <% @admin.errors.full_messages.each do |message| %>
         <li><%= message %></li>  
       <% end %>
     </ul>
  </div>
<% end %>

<div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="col-lg-6">
            <%= form_for([:backoffice, @admin]) do |f| %>
              <label>Email</label>
              <%= f.text_field :email, class:"form-control", placeholder:"admin@email.com" %>
              
              <label>Senha</label>
              <%= f.password_field :password, class:"form-control", placeholder:"Senha" %>
              
              <label>Confirmação de Senha</label>
              <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirmação de Senha" %>
              <%= f.submit 'Salvar', class:"btn btn-default" %>
            <% end %>
          </div>
        </div>
        <!-- /.panel-body -->
    </div>
